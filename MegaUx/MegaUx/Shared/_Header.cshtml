        string fileName = Path.GetFileName(Request.PhysicalPath);

        string homeClass = "";
        string deskClass = "";
        string ordersClass = "";

        switch (fileName) {
            case "home":
            case "home.cshtml":
                homeClass = "active";
                break;
            case "desk":
            case "desk.cshtml":
                deskClass = "active";
                break;
            case "orders":
            case "orders.cshtml":
            case "add":
            case "add.cshtml":
            case "edit":
            case "edit.cshtml":
            case "delete":
            case "delete.cshtml":
                ordersClass = "active";
                break;
        }
    }
